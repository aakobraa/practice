<Window x:Class="practice02.Autorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:practice02"
        mc:Ignorable="d"
        Title="Авторизация" Height="200" Width="300"
       ResizeMode="NoResize" WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        Activated="Window_Activated">
    <Grid>
        <Label Content="Авторизация" FontSize="20" HorizontalAlignment="Center"/>
        <Label Content="Логин" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0" Height="30"/>
        <TextBox x:Name="tbLogin" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="90" Margin="70,40" />
        <Label Content="Пароль" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,75" Height="30" />
        <PasswordBox x:Name="pbPassword" HorizontalAlignment="Left" VerticalAlignment="Top" PasswordChar="*" Height="30" Width="90" Margin="70,75"/>
        <Button Content="Войти" VerticalAlignment="Top" Margin="5,110,5,5" Click="Enter_Click" Height="30" IsDefault="True"/>
        <Button Content="Отмена" VerticalAlignment="Top" Margin="5,145,5,5" Click="Cancel_Click" Height="30"/>
    </Grid>
</Window>
